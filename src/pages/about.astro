---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import teamImage from "assets/team.jpg";

---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Meet the Team
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        We are a team of faculty and students at Oregon State University!
        The Games for Healthy People and Healthy Planet Food Calculator is a collaborative effort involving Dr. Siew Sun Wong from the College of Nutrition and Dr. Sharon Shen from the College of Forestry. The other team members include five seniors studying Computer Science at OSU.
      </p>
    </div>
    <div class="flex justify-center mt-12">
      <Picture
      src={teamImage}
      alt="team photo"
      style="max-width: 600px; width: 100%; height: auto;"
    /></div>
    <div class="flex justify-center mt-12">
      <div class="w-full max-w-4xl flex justify-center">
        <div class="w-1/2 pr-1 text-center">
          <h3 class="font-bold text-lg text-orange-500 mb-2">Author</h3>
          <p>Siew Sun Wong, PhD, MS, LTCL</p>
        </div>
        <div class="w-1/2 pl-1 border-l-4 border-orange-500 text-center">
          <h3 class="font-bold text-lg text-orange-500 mb-2">Contributors</h3>
          <p>Gerald Hendrix</p>
          <p>Garrett Berliner</p>
          <p>Mitch Stephenson</p>
          <p>Kyu Sung Kwon</p>
          <p>Emma Koehmstedt</p>
        </div>
      </div>
    </div>
   

  </Container>
</Layout>
